{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "baseUrl": ".",
    "paths": {
      "@shared/types/*": ["shared/types/src/*"],
      "@shared/utils/*": ["shared/utils/src/*"],
      "@shared/middleware/*": ["shared/middleware/src/*"],
      "@shared/database/*": ["shared/database/src/*"],
      "@shared/config/*": ["shared/config/src/*"],
      "@services/product-intelligence/*": ["services/product-intelligence/src/*"],
      "@services/marketplace-integration/*": ["services/marketplace-integration/src/*"],
      "@services/vendor-integration/*": ["services/vendor-integration/src/*"],
      "@services/order-processing/*": ["services/order-processing/src/*"],
      "@services/pricing-engine/*": ["services/pricing-engine/src/*"],
      "@services/inventory-management/*": ["services/inventory-management/src/*"],
      "@services/accounting-system/*": ["services/accounting-system/src/*"],
      "@services/analytics-engine/*": ["services/analytics-engine/src/*"],
      "@services/api-gateway/*": ["services/api-gateway/src/*"]
    },
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo"
  },
  "include": [
    "src/**/*",
    "shared/**/src/**/*",
    "services/**/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "references": [
    { "path": "./shared/types" },
    { "path": "./shared/utils" },
    { "path": "./shared/middleware" },
    { "path": "./shared/database" },
    { "path": "./shared/config" },
    { "path": "./services/product-intelligence" },
    { "path": "./services/marketplace-integration" },
    { "path": "./services/vendor-integration" },
    { "path": "./services/order-processing" },
    { "path": "./services/pricing-engine" },
    { "path": "./services/inventory-management" },
    { "path": "./services/accounting-system" },
    { "path": "./services/analytics-engine" },
    { "path": "./services/notification-service" },
    { "path": "./services/performance-optimization" },
    { "path": "./services/security-compliance" },
    { "path": "./services/api-gateway" }
  ]
} 