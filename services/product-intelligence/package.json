{
  "name": "@vault/product-intelligence",
  "version": "1.0.0",
  "description": "Product Intelligence Service for Vault - AI-powered product analysis and recommendations",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "test": "jest --runInBand --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@prisma/client": "^6.11.1",
    "@vault/shared-database": "*",
    "@vault/shared-middleware": "*",
    "express": "^4.18.2",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.12",
    "dotenv": "^17.2.0",
    "jest": "^29.0.0",
    "supertest": "^6.3.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  }
}
